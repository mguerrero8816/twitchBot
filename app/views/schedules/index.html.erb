<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.title %></td>
        <td><%= schedule.description %></td>
        <td><%= standard_table_date(schedule.start_at) %></td>
        <td><%= standard_table_time(schedule.start_at) %></td>
        <td>
          <%= link_to 'Edit', edit_schedule_path(schedule.id) %>
          <span>|</span>
          <%= link_to 'Delete', schedule_path(schedule.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

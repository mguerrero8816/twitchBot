<%= link_to 'Home', root_path %>
<%= link_to 'New Schedule', new_schedule_path %>
<table>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.title %></td>
      <td><%= schedule.description %></td>
      <td><%= schedule.start_at %></td>
      <td>
        <%= link_to 'Edit', edit_schedule_path(schedule.id) %>
        <span>|</span>
        <%= link_to 'Delete', schedule_path(schedule.id), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
